{
  auto_https disable_redirects
}

https://localhost {
  tls internal
  encode gzip

  @api path /api/*
  handle @api {
    reverse_proxy bff:4000
  }

  handle_path /healthz {
    reverse_proxy bff:4000
  }

  handle_path /readyz {
    reverse_proxy bff:4000
  }

  handle {
    reverse_proxy frontend:3000
  }
}
